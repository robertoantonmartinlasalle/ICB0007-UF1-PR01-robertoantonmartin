<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextRocketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del cohete"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextRocketType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo del cohete"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextRocketDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkBoxRocketActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextRocketStages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Etapas"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextRocketBoosters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Propulsores"
            android:inputType="number"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextRocketCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo por lanzamiento"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonSaveRocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
