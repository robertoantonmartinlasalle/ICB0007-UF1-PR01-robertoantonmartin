<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del cohete -->
        <TextView
            android:id="@+id/textViewRocketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:text="Nombre del cohete" />

        <!-- Tipo del cohete -->
        <TextView
            android:id="@+id/textViewRocketType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Tipo de cohete" />

        <!-- Estado de actividad -->
        <TextView
            android:id="@+id/textViewRocketActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Activo o no" />

        <!-- Número de etapas -->
        <TextView
            android:id="@+id/textViewRocketStages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Número de etapas" />

        <!-- Número de propulsores -->
        <TextView
            android:id="@+id/textViewRocketBoosters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Número de propulsores" />

        <!-- Costo por lanzamiento -->
        <TextView
            android:id="@+id/textViewRocketCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Costo por lanzamiento" />

        <!-- Tasa de éxito -->
        <TextView
            android:id="@+id/textViewRocketSuccessRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Tasa de éxito" />

        <!-- Fecha del primer vuelo -->
        <TextView
            android:id="@+id/textViewRocketFirstFlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Fecha del primer vuelo" />

        <!-- País de origen -->
        <TextView
            android:id="@+id/textViewRocketCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="País de origen" />

        <!-- Compañía fabricante -->
        <TextView
            android:id="@+id/textViewRocketCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Compañía fabricante" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/textViewRocketDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Descripción" />

        <!-- Altura -->
        <TextView
            android:id="@+id/textViewRocketHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Altura" />

        <!-- Diámetro -->
        <TextView
            android:id="@+id/textViewRocketDiameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:text="Diámetro" />
    </LinearLayout>
</ScrollView>
